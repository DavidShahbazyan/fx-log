<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.glyphfont.Glyph?>
<SplitPane dividerPositions="0.3" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hildan.fxlog.controllers.ColorizersController">
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
    </padding>
    <BorderPane>
        <center>
            <ListView fx:id="colorizersList" editable="true"/>
        </center>
        <top>
            <Label text="Colorizers" BorderPane.alignment="CENTER_LEFT"/>
        </top>
        <bottom>
            <HBox spacing="2.0" BorderPane.alignment="CENTER">
                <TextField fx:id="newColorizerNameField" HBox.hgrow="ALWAYS"/>
                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addNewColorizer"
                        HBox.hgrow="NEVER">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="plus"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Add new colorizer"/>
                    </tooltip>
                </Button>
                <Button fx:id="removeColorizerButton" minHeight="-Infinity" minWidth="-Infinity"
                        mnemonicParsing="false" onAction="#removeSelectedColorizer">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="trash"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Delete colorizer"/>
                    </tooltip>
                </Button>
            </HBox>
        </bottom>
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </padding>
    </BorderPane>
    <SplitPane fx:id="selectedColorizerPane" dividerPositions="0.65" orientation="VERTICAL">
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </padding>
        <BorderPane>
            <center>
                <ListView fx:id="rulesList" editable="true" prefHeight="200.0" prefWidth="200.0"/>
            </center>
            <top>
                <Label text="Rules" BorderPane.alignment="CENTER_LEFT"/>
            </top>
            <bottom>
                <HBox spacing="2.0" BorderPane.alignment="CENTER">
                    <TextField fx:id="newRuleNameField" promptText="New rule name" HBox.hgrow="ALWAYS"/>
                    <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addNewRule"
                            HBox.hgrow="NEVER">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="plus"/>
                        </graphic>
                        <tooltip>
                            <Tooltip text="Add new rule"/>
                        </tooltip>
                    </Button>
                    <Button fx:id="removeRuleButton" minHeight="-Infinity" minWidth="-Infinity"
                            mnemonicParsing="false" onAction="#removeSelectedRule">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="trash"/>
                        </graphic>
                        <tooltip>
                            <Tooltip text="Remove rule"/>
                        </tooltip>
                    </Button>
                </HBox>
            </bottom>
        </BorderPane>
        <ScrollPane fx:id="selectedRulePane" fitToHeight="true" fitToWidth="true">
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <VBox spacing="5.0">
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Filter" HBox.hgrow="NEVER"/>
                        <TextField fx:id="filterRegexField" minHeight="-Infinity" minWidth="-Infinity"
                                   promptText="filter regex" HBox.hgrow="ALWAYS">
                            <tooltip>
                                <Tooltip text="The regex to choose the logs to format"/>
                            </tooltip>
                        </TextField>
                    </HBox>
                    <GridPane hgap="5.0" minHeight="-Infinity" minWidth="-Infinity">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <RadioButton fx:id="matchColumnButton" minHeight="-Infinity" minWidth="-Infinity"
                                     mnemonicParsing="false" selected="true" text="Match specific column:"
                                     GridPane.rowIndex="1">
                            <toggleGroup>
                                <ToggleGroup fx:id="filterType"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="matchRawButton" minHeight="-Infinity" minWidth="-Infinity"
                                     mnemonicParsing="false" text="Match raw log line"
                                     toggleGroup="$filterType"/>
                        <TextField fx:id="filterColumnNameField" minHeight="-Infinity" minWidth="-Infinity"
                                   promptText="capturing group name" GridPane.columnIndex="1"
                                   GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                            <tooltip>
                                <Tooltip
                                        text="The name of the capturing group defining the column (in a columnizer)"/>
                            </tooltip>
                        </TextField>
                    </GridPane>
                </VBox>
                <Separator prefWidth="200.0"/>
                <VBox fillWidth="false" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0">
                    <Label minHeight="-Infinity" minWidth="-Infinity"
                           text="Style (check to override default)"/>
                    <GridPane hgap="5.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <CheckBox fx:id="overrideTextForeground" minHeight="-Infinity" minWidth="-Infinity"
                                  mnemonicParsing="false" text="Override text foreground"
                                  GridPane.hgrow="NEVER"/>
                        <CheckBox fx:id="overrideTextBackground" minHeight="-Infinity" minWidth="-Infinity"
                                  mnemonicParsing="false" text="Override text background"
                                  GridPane.hgrow="NEVER" GridPane.rowIndex="1"/>
                        <ColorPicker fx:id="foregroundColorPicker" minHeight="-Infinity" minWidth="-Infinity"
                                     GridPane.columnIndex="1" GridPane.hgrow="NEVER"/>
                        <ColorPicker fx:id="backgroundColorPicker" minHeight="-Infinity" minWidth="-Infinity"
                                     GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </SplitPane>
</SplitPane>
