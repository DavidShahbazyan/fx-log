<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.504950495049505" prefHeight="446.0" prefWidth="608.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hildan.fxlog.controllers.ColumnizersController">
  <items>
      <BorderPane>
         <center>
            <ScrollPane fitToHeight="true" fitToWidth="true">
               <content>
                  <ListView fx:id="columnizersList" />
               </content>
            </ScrollPane>
         </center>
         <top>
            <Label text="Columnizers" BorderPane.alignment="CENTER_LEFT" />
         </top>
         <bottom>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="newColumnizerNameField" promptText="new columnizer name" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#addNewColumnizer" text="Add" HBox.hgrow="NEVER" />
               </children>
            </HBox>
         </bottom>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </BorderPane>
      <SplitPane fx:id="selectedColumnizerPane" dividerPositions="0.4340909090909091" orientation="VERTICAL">
         <items>
            <ScrollPane fx:id="selectedRulePane" fitToHeight="true" fitToWidth="true">
               <content>
                  <VBox>
                     <children>
                        <Label text="Columns" VBox.vgrow="NEVER" />
                        <TableView fx:id="columnsTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                          <columns>
                            <TableColumn fx:id="columnLabelColumn" maxWidth="170.0" minWidth="-1.0" prefWidth="128.0" text="Column Label" />
                            <TableColumn fx:id="capturingGroupColumn" minWidth="-1.0" prefWidth="160.0" text="Associated capturing group" />
                          </columns>
                        </TableView>
                        <HBox spacing="2.0" VBox.vgrow="NEVER">
                           <children>
                              <TextField fx:id="newColumnNameField" promptText="column header" HBox.hgrow="ALWAYS" />
                               <TextField fx:id="newColumnGroupField" promptText="capturing group name" HBox.hgrow="ALWAYS" />
                              <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addNewColumn" text="Add" HBox.hgrow="NEVER" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
            <BorderPane>
               <center>
                  <ScrollPane fitToHeight="true" fitToWidth="true">
                     <content>
                        <ListView fx:id="patternList" />
                     </content>
                  </ScrollPane>
               </center>
               <top>
                  <Label text="Columnization rules" BorderPane.alignment="CENTER_LEFT" />
               </top>
               <bottom>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="newPatternRegexField" promptText="new regex" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#addNewPattern" text="Add" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
               </bottom>
            </BorderPane>
         </items>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </SplitPane>
  </items>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</SplitPane>
