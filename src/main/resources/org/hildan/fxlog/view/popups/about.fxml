<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet org/hildan/fxlog/themes/common.css?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="280.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.65">
    <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
    </padding>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
            <VBox spacing="15.0">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <VBox spacing="8.0">
                    <Label styleClass="title-huge" text="FX Log ${projectVersion}"/>
                    <Label text="%about.version"/>
                    <Label text="%about.releasedOn"/>
                    <Label text="%about.license"/>
                    <Label text="%about.technology"/>
                </VBox>
                <Separator prefWidth="200.0"/>
                <VBox minHeight="-Infinity" minWidth="-Infinity" spacing="8.0">
                    <Label text="%about.copyright"/>
                    <Label text="%about.contact"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
