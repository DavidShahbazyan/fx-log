<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hildan.fxlog.controllers.MainController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar VBox.vgrow="NEVER">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="menuOpen" mnemonicParsing="false" onAction="#openFile" text="Open…">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                    </accelerator>
                                </MenuItem>
                                <Menu mnemonicParsing="false" text="Open Recent" />
                                <MenuItem mnemonicParsing="false" onAction="#closeFile" text="Close" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#openPreferences" text="Preferences…" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#copyRaw" text="Copy raw log" />
                                <MenuItem mnemonicParsing="false" onAction="#copyPretty" text="Copy with columns" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#selectAll" text="Select All" />
                                <MenuItem mnemonicParsing="false" onAction="#unselectAll" text="Unselect All" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About FX Log" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar VBox.vgrow="ALWAYS">
                    <items>
                        <ToggleButton fx:id="autoScrollToggleButton" mnemonicParsing="false" onAction="#toggleAutoscroll" text="Auto-scroll" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="filterField" onAction="#filterLogs" promptText="filter regexp" />
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
            <content>
                <AnchorPane>
                    <children>
                        <TableView fx:id="logsTable" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
